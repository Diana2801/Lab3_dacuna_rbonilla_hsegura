{
  "expo": {
    "name": "AwesomeProject",
    "slug": "AwesomeProject",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir el acceso a la cámara para tomar fotos",
        "NSPhotoLibraryAddUsageDescription": "Permitir el acceso a la biblioteca de fotos para guardar las imágenes tomadas",
        "NSPhotoLibraryUsageDescription": "Permitir el acceso a la biblioteca de fotos para guardar las imágenes tomadas"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": [
          "CAMERA",
          "WRITE_EXTERNAL_STORAGE"
        ]
      }
      
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
